{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"]
    },
    "outDir": "./dist"
  },
  "exclude": ["src/**/*.spec.tsx", "src/**/*.spec.ts"],
  "include": ["src/**/*"]
}
